				{
					"id": "dev.ajcaldwell.aider.sidebar.context",
					"name": "Aider Context",
					"placeholderText": "Aider Context",
					"headerCommands": [
						{
							"title": "Sync",
							"image": "__builtin.refresh",
							"command": "dev.ajcaldwell.aider.sync_tabs_to_context"
