{
	"identifier": "dev.ajcaldwell.aider",
	"name": "Aider",
	"organization": "AJ Caldwell",
	"description": "Aider",
	"version": "1.0",
	"categories": ["commands", "sidebars"],
	"main": "main.js",
	"entitlements": {
		"clipboard": true,
		"process": true,
		"requests": true,
		"filesystem": "readwrite"
	},
	"commands": {
		"editor": [
			{
				"title": "run",
				"command": "dev.ajcaldwell.aider.run_command"
			},
			{
